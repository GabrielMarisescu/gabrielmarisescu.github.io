---
import { Code } from 'astro:components';

const code = `interface Developer {
    name: string;
    skills: string[];
    interests: string[];
};

interface TechStack {
    devOps: string[];
    backend: string[];
    frontend: string[];
};

const techStack: TechStack = {
    devOps: [
        'GitLab',
        'GitHub',
        'Git',
        'CI/CD',
        'Docker',
    ],
    frontend: [
        'HTML5',
        'CSS3',
        'SCSS',
        'JavaScript',
        'TypeScript',
        'Tailwind CSS',
        'Astro',
        'SCSS',
        'React',
        'Next.js',
        'React Query',
        'Redux Toolkit',
        'Zustand',
        'Material UI',
        'Accessibility (WCAG)',
        'SolidJs',
    ],
    backend: [
        'Java',
        'Spring Boot',
        'Spring Security',
        'Spring Data JPA',
        'Hibernate',
        'REST APIs',
        'Microservices',
        'Kafka',
        'PostgreSQL',
        'Redis',
        'Flyway',
        'JUnit',
    ]
};

// Developer profile
const me: Developer = {
    name: 'Ionut Gabriel Marisescu',
    skills: [ 
        ...techStack.devOps,
        ...techStack.backend,
        ...techStack.frontend
    ],
    interests: [
        'Neovim',
        'Mechanical Choc Split Keyboards',
        'System Design',
        'Developer Ergonomics',
        'Hiking',
    ]
};
`;
---

<Code
    code={code}
    lang="js"
    wrap={true}
/>

<style is:global>

    /* Custom styling for code block line numbers */
    pre.astro-code {
        @apply bg-transparent !important;
    }

    pre.astro-code code {
        @apply block;
        counter-reset: step;
        counter-increment: step 0;
    }

    pre.astro-code code .line {
        @apply relative;
    }

    pre.astro-code code .line::before {
        content: counter(step);
        counter-increment: step;
        @apply text-gray-600 pr-2;
    }

</style>
